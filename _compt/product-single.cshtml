    <script>
$(document).on("click", ".pro-details-buy-now", function (event) {
    event.preventDefault();

    if ($('#variation').length) {
        var variation = $("#variation").val();
        if (variation == "") {
            $("#alert").removeClass("d-none");
            return;
        }
    }

    document.forms["product"].submit();
