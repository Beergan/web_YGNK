$(document).on("click", "#add-to-cart", function (event) {
    event.preventDefault();

    var button = $(this); 
    var productId = button.attr("data-product-id");
    var variation = $("#variation").val() || "";
    var quantity = $("#quantity").val() || 1;

    // Optional: Validate quantity
    if (parseInt(quantity) <= 0 || isNaN(quantity)) {
        quantity = 1;
    }

    // Loading icon (optional)
    button.find("i").removeClass("icon-basket").addClass("spinner-border spinner-border-sm");

    $.post("@Root.Config.Link.PageCart?add", {
        "__RequestVerificationToken": "@Root.AntiForgeryTokenForAjaxPost()",
        "productId": productId,
        "variation": variation,
        "quantity": quantity
    })
    .done(function (data) {
        $(".sidebar-cart-active").html(data);
        button.html('<i class="fa fa-shopping-bag me-2 "></i> Đã thêm!');
        $(".cart-count1").load(window.location.href + " .cart-count1");
        $(".cart-count2").load(window.location.href + " .cart-count2");

        $(".cart-count1, .cart-count2").addClass("shake-cart");
        setTimeout(() => {
            $(".cart-count1, .cart-count2").removeClass("shake-cart");
        }, 600);

        $(".sidebar-cart-active").addClass("highlight-cart");
        setTimeout(() => {
            $(".sidebar-cart-active").removeClass("highlight-cart");
        }, 800);

        $.toast({
            heading: 'Thông báo',
            text: 'Giỏ hàng đã được cập nhật!',
            position: 'top-right',
            stack: false,
            showHideTransition: 'fade',
            icon: 'success',
            loaderBg: '#ff6849'
        });
    })
    .fail(function () {
        $.toast({
            heading: 'Lỗi',
            text: 'Đã có lỗi xảy ra khi thêm vào giỏ hàng!',
            position: 'bottom-center',
            stack: false,
            icon: 'error'
        });
    })
});
