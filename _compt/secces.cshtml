                                <th>THANH TOÁN</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@order.OrderCode</td>
                                <td>@($"{order.CreatedTime:dd/MM/yyyy}")</td>
                                <td>@($"{order.TotalAmount:C0}")</td>
                                <td>Thỏa thuận</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>


